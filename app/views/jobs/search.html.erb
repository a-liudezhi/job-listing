<!--=== 搜索结果，没有符合条件的数据 ===-->
<% if @jobs.blank?%>
<div class="col-md-10 col-md-offset-1">
  <div class="search-error">
    <h2>没有符合搜索条件的资料哦！</h2><br />
    <p><%= link_to("立即查看工作", jobs_path, class: "btn btn-lg btn-success") %></p>
  </div>
</div>
<% else %>
<!--=== 搜索结果，有符合条件的数据 ===-->
<div class="col-md-10 col-md-offset-1 page-title">
  <h1><sapn class="fa fa-search"></sapn> 搜索结果</h1>
</div>
<div class="col-md-10 col-md-offset-1 job-content">
  <!--=== 左侧区块 ===-->
  <div class="main-box">
  <% @jobs.each do |job| %>
  <div class="col-md-9 job-box">
    <div class="info">
      <div class="info-top">
        <h3><%= link_to(job.title, job_path(job), target: "_blank" )%></h3><span><%= job.created_at.strftime("%Y-%m-%d") %></span>
      </div>
      <div class="info-bot">
        <span><%= job.brand %></span>
      </div>
      <div class="info-mid">
        <%= job.wage_lower_bound %> k ~ <%= job.wage_upper_bound %> k
      </div>
    </div>
  </div>
  <% end %>
  </div>

<!--=== 换页区块 ===-->
<div class="col-md-10 col-md-offset-1 job-bottom">
  <div class="text-center">
    <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
  </div>
</div>
<% end %>
