<br>
<div class="jobs-container">
  <div class="content">
    <ul class="nav nav-tabs">
      <li class="<%= 'active' if !params[:order] %>">
        <%= link_to("默认排序", jobs_path) %>
      </li>
      <li <li class="<%= 'active' if params[:order] == 'by_lower_bound' %>">
        <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
      </li>
      <li <li class="<%= 'active' if params[:order] == 'by_upper_bound' %>">
        <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>
      </li>
    </ul>

    <table class="table table-boldered table-striped">
  <thead>
    <tr>
      <td><h2>职位名称</h2></td>
      <td><h2>品牌名称</h2></td>
      <td><h2>薪资情况</h2></td>
      <td><h2>工作地点</h2></td>
      <td><h2>刊登时间</h2></td>
    </tr>
  </thead>
<tbody>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td>
      <%= job.brand %>
    </td>
    <td>
      <span class="label label-primary"><%= job.wage_lower_bound %>k - <%= job.wage_upper_bound %>k</span>
    </td>
    <td>
      <span class="fa fa-map-marker"></span><%= job.location %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
  </div>
</div>


<div class="col-md-10 col-md-offset-1 job-bottom">
  <div class="text-center">
    <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
  </div>
</div>
